<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="loginPane" prefHeight="600.0" prefWidth="990.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.game.LoginPageController">
   <children>
      <ImageView fx:id="loginImage" fitHeight="633.0" fitWidth="1012.0" layoutX="-1.0" opacity="0.97" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/Wallpaper-clash-of-clans-wide.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="playerIDField" alignment="CENTER" layoutX="218.0" layoutY="310.0" opacity="0.85" prefHeight="47.0" prefWidth="182.0" promptText="PlayerID">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passwordField" alignment="CENTER" layoutX="218.0" layoutY="371.0" opacity="0.85" prefHeight="47.0" prefWidth="182.0" promptText="Password">
         <font>
            <Font size="16.0" />
         </font>
      </PasswordField>
      <Button fx:id="loginButton" layoutX="274.0" layoutY="433.0" mnemonicParsing="false" onMouseClicked="#loginButton" opacity="0.82" prefHeight="32.0" prefWidth="70.0" style="-fx-background-color: #ffffff; -fx-background-radius: 20;" text="Login">
         <font>
            <Font name="Cambria Bold" size="15.0" />
         </font>
      </Button>
      <Button fx:id="signupButton" layoutX="274.0" layoutY="478.0" mnemonicParsing="false" onMouseClicked="#signupButton" opacity="0.82" prefHeight="32.0" prefWidth="69.0" style="-fx-background-color: #ffffff; -fx-background-radius: 20;" text="Signup">
         <font>
            <Font name="Cambria Bold" size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
