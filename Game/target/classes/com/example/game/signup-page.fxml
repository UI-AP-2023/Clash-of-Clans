            <Font name="Cambria Bold" size="20.0" />
         </font>
      </Button>
      <TextField fx:id="playerIDField" alignment="CENTER" layoutX="340.0" layoutY="264.0" opacity="0.9" prefHeight="54.0" prefWidth="222.0" promptText="PlayerID">
         <font>
            <Font size="22.0" />
         </font>
      </TextField>
      <TextField fx:id="passwordField" alignment="CENTER" layoutX="340.0" layoutY="345.0" opacity="0.92" prefHeight="54.0" prefWidth="222.0" promptText="Password">
         <font>
            <Font size="22.0" />
         </font>
      </TextField>
      <ImageView fx:id="backImage" fitHeight="54.0" fitWidth="51.0" layoutX="937.0" layoutY="548.0" onMouseClicked="#backImage" pickOnBounds="true" preserveRatio="true">
