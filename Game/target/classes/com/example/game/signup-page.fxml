                  <Image url="@images/map1.jpg" />
               </image>
               <effect>
                  <DropShadow height="25.68" radius="12.925" width="28.02" />
               </effect></ImageView>
            <ImageView fx:id="map2" fitHeight="121.0" fitWidth="199.0" layoutX="295.0" layoutY="81.0" onMouseClicked="#map2" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/map2.jpg" />
               </image>
               <effect>
                  <DropShadow height="28.02" radius="14.094999999999999" width="30.36" />
               </effect></ImageView>
            <ImageView fx:id="map4" fitHeight="123.0" fitWidth="173.0" layoutX="780.0" layoutY="79.0" onMouseClicked="#map4" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/map4.jpg" />
               </image>
               <effect>
                  <DropShadow height="28.02" radius="15.265" width="35.04" />
               </effect></ImageView>
            <ImageView fx:id="map3" fitHeight="175.0" fitWidth="173.0" layoutX="539.0" layoutY="80.0" onMouseClicked="#map3" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/map3.jpg" />
               </image>
               <effect>
                  <DropShadow height="32.7" radius="14.095" width="25.68" />
               </effect></ImageView>
         </children>
      </AnchorPane>
   </children>
